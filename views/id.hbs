<div class="mb-3 my_edit_card">
  <div class="card-body  ">
    <h5 class="card-title">command: {{data.command}}</h5>
    <p class="card-text">description: {{data.description}}</p>
    <p class="card-text">exemple: {{data.exemple}}</p>
  </div>
  </div>
<div class="my_form_edit">
  <form action="/changeCommand" method="post" class="changeForm">
  <div class="form-group">
    <label for="command">Update command</label>
    <input type="hidden" id="id" name="id" value={{data.id}}>
    <input required="required" type="text" class="form-control" id="command" name="command" placeholder="Enter  command">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>

<form action="/Description" method="POST" class="changeForm">
  <div class="form-group">
    <label for="description">Update description</label>
    <input type="hidden" id="id" name="id" value={{data.id}}>
    <input required="required" type="text" class="form-control" id="description" name="description" placeholder="description">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>

<form action="/changeExemple" method="post" class="changeForm">
  <div class="form-group">
    <label for="exemple">Update exemple</label>
     <input type="hidden" id="id" name="id" value={{data.id}}>
    <input required="required" type="text" class="form-control" id="exemple" name="exemple" placeholder="exemple">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>

</div>
  